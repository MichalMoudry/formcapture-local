@layout IndexLayout
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localizer
@page "/"

<h1 class="mb-4">
    <img src="/favicon.ico" alt="Form Capture logo" draggable="false" class="mb-3 mr-2" />
    <span>Form Capture</span>
</h1>

<p id="app-description">
    @Localizer["AppDescription"]
</p>

<div class="container mt-3">
    <button type="button" @onclick="@(e => Navigate("/login"))" class="btn btn-light mr-2" title="Log in">
        <span class="oi oi-account-login mr-1"></span> @Localizer["LogIn"]
    </button>
    <button type="button" @onclick="@(e => Navigate("/register"))" class="btn btn-light ml-2" title="Create an account">
        <span class="oi oi-person mr-1"></span> @Localizer["Register"]
    </button>
</div>

@code
{
    private void Navigate(string page)
    {
        NavigationManager.NavigateTo(page);
    }
}