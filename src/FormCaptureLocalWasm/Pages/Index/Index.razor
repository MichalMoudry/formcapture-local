@layout IndexLayout
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localizer
@page "/"

<h1 class="mb-2">
    <span class="oi oi-aperture me-1"></span>
    <!--<img src="/formcapture-icon.svg" alt="Form Capture logo" draggable="false" class="mb-3 mr-1" id="index-page-app-logo" />-->
    <span>Form Capture</span>
</h1>

<p id="app-description" class="mt-3">
    @Localizer["AppDescription"]
</p>

<div class="container mt-3">
    <!--Login button-->
    <div>
        <NavigateButton Icon='<span class="oi oi-account-login me-2"></span>' Content=@Localizer["LogIn"] DestinationURI="/login" OnClick="Navigate" Classes="btn btn-light w-25 index-button" />
    </div>
    <!--Register button-->
    <div class="mt-3">
        <NavigateButton icon='<span class="oi oi-person me-2"></span>' Content=@Localizer["Register"] DestinationURI="/register" OnClick="Navigate" Classes="btn btn-light w-25 index-button" />
    </div>
</div>

@code
{
    private void Navigate(string page)
    {
        NavigationManager.NavigateTo(page);
    }
}