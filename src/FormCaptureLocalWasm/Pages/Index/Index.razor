@layout IndexLayout
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localizer
@page "/"

<div class="card px-4 py-3">
    <h1 class="mb-2">
        <span class="oi oi-aperture me-1"></span>
        <!--<img src="/formcapture-icon.svg" alt="Form Capture logo" draggable="false" class="mb-3 mr-1" id="index-page-app-logo" />-->
        <span>Form Capture</span>
    </h1>

    <p id="app-description" class="mt-3">
        @Localizer["AppDescription"]
    </p>

    <div class="mt-3 mb-3">
        <button @onclick="@(e => Navigate("/login"))">
            <span class="oi oi-account-login me-2"></span>@Localizer["LogIn"]
        </button>
        <button @onclick="@(e => Navigate("/register"))">
            <span class="oi oi-plus me-2"></span>@Localizer["Register"]
        </button>
    </div>
</div>

@code
{
    private void Navigate(string page)
    {
        NavigationManager.NavigateTo(page);
    }
}