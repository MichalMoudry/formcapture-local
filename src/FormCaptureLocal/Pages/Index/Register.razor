@layout IndexLayout
@inject IStringLocalizer<App> Localizer
@inject IDataAccess DataAccess
@page "/register"

<h3><span class="oi oi-person"></span> @Localizer["RegisterPageTitle"]</h3>

<div class="form-card mt-2">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" @bind-value="_email" placeholder="@Localizer["EmailInputPlaceholder"]" class="form-control" id="email" name="email" />
    </div>

    <div class="form-group">
        <label for="password">@Localizer["Password"]:</label>
        <input type="password" @bind-value="_password" placeholder="@Localizer["PasswordInputPlaceholder"]" class="form-control" id="password" name="password" />
    </div>

    <div class="form-group">
        <label for="confirm-password">@Localizer["ConfirmPasswordLabel"]:</label>
        <input type="password" @bind-value="_confirmationPassword" placeholder="@Localizer["ConfirmPasswordLabel"]..." class="form-control" id="confirm-password" name="confirm-password" />
    </div>

    <button id="submitButton" class="btn btn-primary mt-2" title="@Localizer["RegisterFormSubmitButtonTitle"]">
        <span class="oi oi-check mr-2"></span> @Localizer["Submit"]
    </button>

    <LoadingButton Title=@Localizer["RegisterFormSubmitButtonTitle"] Content=@Localizer["Submit"] Classes="btn btn-primary mt-2" Icon='<span class="oi oi-check mr-2"></span>'  />

    <!--
        <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    -->
</div>

@code
{
    /// <summary>
    /// Private field with user's password.
    /// </summary>
    private string _password;

    private string _email;

    private string _confirmationPassword;
}