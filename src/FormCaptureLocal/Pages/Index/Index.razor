@layout IndexLayout
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localizer
@page "/"

<h1 class="mb-2">
    <img src="/formcapture-icon.svg" alt="Form Capture logo" draggable="false" class="mb-3 mr-1" id="index-page-app-logo" />
    <span>Form Capture</span>
</h1>

<p id="app-description">
    @Localizer["AppDescription"]
</p>

<div class="container mt-3">
    <!--Login button-->
    <button type="button" @onclick="@(e => Navigate("/login"))" class="btn btn-light mr-2" title="@Localizer["LogIn"]">
        <span class="oi oi-account-login mr-1"></span> @Localizer["LogIn"]
    </button>
    <!--Register button-->
    <button type="button" @onclick="@(e => Navigate("/register"))" class="btn btn-light ml-2" title="@Localizer["Register"]">
        <span class="oi oi-person mr-1"></span> @Localizer["Register"]
    </button>
</div>

<div class="mt-3">
    <!--About button-->
    <button type="button" @onclick="@(e => Navigate("/formcapture/about"))" class="btn btn-light mr-2" title="@Localizer["NavMenuAboutLinkText"]">
        <span class="fluentUiGlyph mr-1" id="indexAboutButtonIcon">&#xEA8D;</span> @Localizer["NavMenuAboutLinkText"]
    </button>
</div>

@code
{
    private void Navigate(string page)
    {
        NavigationManager.NavigateTo(page);
    }
}