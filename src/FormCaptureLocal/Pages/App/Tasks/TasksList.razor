@layout AppLayout
@inject NavigationManager NavigationManager
@inject IStringLocalizer<App> Localizer
@inject DataAccess DataAccess
@inject AlertService AlertService
@page "/formcapture/tasks"

<h3><span class="oi oi-code mr-1"></span> @Localizer["TasksListPageTitle"]</h3>

<hr />

<div class="d-flex">
    <button type="button" class="btn btn-outline-success" @onclick="@(e => Navigate("/formcapture/tasks/add"))" title="@Localizer["TasksListPageAddButtonTitle"]">
        <span class="oi oi-plus mr-2"></span> @Localizer["TasksListPageAddButtonText"]
    </button>
    <div class="dropdown">
        <button type="button" class="btn btn-outline-primary ml-2 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="sortButton" title="@Localizer["SortButtonTitle"]">
            <span class="oi oi-sort-ascending mr-1"></span> @Localizer["SortButtonText"]
        </button>
        <div class="dropdown-menu" aria-labelledby="sortButton">
            <a class="dropdown-item" href="/formcapture/tasks/#" title="@Localizer["SortButtonSortByNameText"]" @onclick="@(e => SortList("name"))">
                @Localizer["SortButtonSortByNameText"]
            </a>
            <a class="dropdown-item" href="/formcapture/tasks/#" title="@Localizer["SortButtonSortByDateText"]" @onclick="@(e => SortList("added"))">
                @Localizer["SortButtonSortByDateText"]
            </a>
            <a class="dropdown-item" href="/formcapture/tasks/#" title="@Localizer["SortButtonSortByLastUpdatedText"]" @onclick="@(e => SortList("updated"))">
                @Localizer["SortButtonSortByLastUpdatedText"]
            </a>
        </div>
    </div>
</div>

@if (tasks == null)
{
    <p class="mt-3">
        <span class="mt-2">@Localizer["Loading"]...</span>
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">@Localizer["Loading"]...</span>
        </div>
    </p>
}
else
{
    <div class="table-responsive mt-3">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td><b>@Localizer["Name"]</b></td>
                    <td><b>@Localizer["Added"]</b></td>
                    <td><b>@Localizer["LastUpdated"]</b></td>
                    <td><b>@Localizer["Edit"]</b></td>
                    <td><b>@Localizer["Delete"]</b></td>
                </tr>
            </thead>

            <tbody>
                @foreach (WorkflowTask task in tasks)
                {
                    <tr class="pointer">
                        <td @onclick="@(e => Navigate($"/formcapture/tasks/edit/{task.ID}"))">@task.Name</td>
                        <td @onclick="@(e => Navigate($"/formcapture/tasks/edit/{task.ID}"))">@task.Added.ToShortDateString()</td>
                        <td @onclick="@(e => Navigate($"/formcapture/tasks/edit/{task.ID}"))">@task.Updated.ToShortDateString()</td>
                        <td @onclick="@(e => Navigate($"/formcapture/tasks/edit/{task.ID}"))" class="hoverElement"><span class="fluentUiGlyph tableFluentGlyph">&#xE9C3;</span></td>
                        <td @onclick="@(e => DeleteTask(task))" class="hoverElement"><span class="fluentUiGlyph tableFluentGlyph">&#xE9ED;</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="toast-area mt-3">
    <Toast ID="task-deleted-toast" Type="alert-success" TitleKey="TasksListPageTaskDeletedMessageTitle" ContentKey="TasksListPageTaskDeletedMessage" />

    <Toast ID="error-toast" Type="alert-danger" TitleKey="Error" Content="@errorMessage" />
</div>

@code
{
    /// <summary>
    /// Field that contains all user's tasks.
    /// </summary>
    private List<WorkflowTask> tasks;

    /// <summary>
    /// Field for setting or getting values of error messages.
    /// </summary>
    private string errorMessage;

    /// <summary>
    /// Method for navigating to a specified URI.
    /// </summary>
    /// <param name="page">Page URI.</param>
    private void Navigate(string page)
    {
        NavigationManager.NavigateTo(page);
    }

    private async Task DeleteTask(WorkflowTask task)
    {
        var res = await AlertService.DisplayConfirmDialog($"Do you want to delete '{task.Name}' task?");
        if (res)
        {
            res = await DataAccess.DeleteItem(task.ID, ObjectStores.WorkflowTasks.ToString());
            if (res)
            {
                tasks.Remove(task);
                await AlertService.DisplayToast("task-deleted-toast");
            }
        }
    }

    private async Task SortList(string attribute)
    {
        if (tasks != null)
        {
            if (tasks.Count > 0)
            {
                if (attribute.Equals("name"))
                {
                    tasks = tasks.OrderBy(i => i.Name).ToList();
                }
                else if (attribute.Equals("added"))
                {
                    tasks = tasks.OrderBy(i => i.Added).ToList();
                }
                else if (attribute.Equals("updated"))
                {
                    tasks = tasks.OrderBy(i => i.Updated).ToList();
                }
            }
            else
            {
                errorMessage = $"{Localizer["TemplatesListPageSortEmptyTemplatesError"]}.";
                await AlertService.DisplayToast("error-toast");
            }
        }
        else
        {
            errorMessage = $"{Localizer["TemplatesListPageSortNullTemplatesError"]}.";
            await AlertService.DisplayToast("error-toast");
        }
    }

    /// <summary>
    /// Override of OnInitializedAsync() method.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        tasks = await DataAccess.GetItemsAsList<WorkflowTask>(ObjectStores.WorkflowTasks.ToString());
        if (tasks != null)
        {
            tasks = tasks.Where(i => i.UserID.Equals(UserHelper.UserID)).OrderBy(i => i.Added).ToList();
        }
    }
}