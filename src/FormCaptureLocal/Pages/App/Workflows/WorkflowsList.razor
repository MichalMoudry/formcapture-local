@layout AppLayout
@inject NavigationManager NavigationManager
@inject DataAccess DataAccess
@inject AlertService AlertService
@inject IStringLocalizer<App> Localizer
@page "/formcapture/workflows"

<h3><span class="oi oi-project mr-1"></span> @Localizer["WorkflowsListPageTitle"]</h3>

<hr />

<div class="d-flex">
    <button type="button" class="btn btn-outline-success" @onclick="@(e => Navigate("/formcapture/workflows/add"))" title="@Localizer["WorkflowsListPageAddButtonTitle"]">
        <span class="oi oi-plus mr-2"></span> @Localizer["WorkflowsListPageAddButtonText"]
    </button>
    <div class="dropdown">
        <button type="button" class="btn btn-outline-primary ml-2 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="sortButton" title="@Localizer["SortButtonTitle"]">
            <span class="oi oi-sort-ascending mr-1"></span> @Localizer["SortButtonText"]
        </button>
        <div class="dropdown-menu" aria-labelledby="sortButton">
            <a class="dropdown-item" href="/formcapture/workflows/#" title="@Localizer["SortButtonSortByNameText"]" @onclick="@(e => SortList("name"))">
                @Localizer["SortButtonSortByNameText"]
            </a>
            <a class="dropdown-item" href="/formcapture/workflows/#" title="@Localizer["SortButtonSortByDateText"]" @onclick="@(e => SortList("added"))">
                @Localizer["SortButtonSortByDateText"]
            </a>
            <a class="dropdown-item" href="/formcapture/workflows/#" title="@Localizer["SortButtonSortByLastUpdatedText"]" @onclick="@(e => SortList("updated"))">
                @Localizer["SortButtonSortByLastUpdatedText"]
            </a>
        </div>
    </div>
</div>

@if (workflows == null)
{
    <p class="mt-3">
        <span class="mt-2">@Localizer["Loading"]...</span>
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">@Localizer["Loading"]...</span>
        </div>
    </p>
}
else
{
    <div class="table-responsive mt-3">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td><b>@Localizer["Name"]</b></td>
                    <td><b>@Localizer["Added"]</b></td>
                    <td><b>@Localizer["LastUpdated"]</b></td>
                    <td><b>@Localizer["Edit"]</b></td>
                    <td><b>@Localizer["Delete"]</b></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Workflow workflow in workflows)
                {
                    <tr class="pointer">
                        <td @onclick="@(e => Navigate($"/formcapture/workflows/edit/{workflow.ID}"))">@workflow.Name</td>
                        <td @onclick="@(e => Navigate($"/formcapture/workflows/edit/{workflow.ID}"))">@workflow.Added.ToShortDateString()</td>
                        <td @onclick="@(e => Navigate($"/formcapture/workflows/edit/{workflow.ID}"))">@workflow.Updated.ToShortDateString()</td>
                        <td @onclick="@(e => Navigate($"/formcapture/workflows/edit/{workflow.ID}"))" class="hoverElement"><span class="fluentUiGlyph tableFluentGlyph">&#xE9C3;</span></td>
                        <td class="hoverElement"><span class="fluentUiGlyph tableFluentGlyph">&#xE9ED;</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="toast-area mt-3">
    <div class="alert alert-success alert-dismissible fade show d-none" id="task-deleted-toast" role="alert">
        <strong class="mr-auto">@Localizer["WorkflowsListPageWorkflowDeleteMessageTitle"]</strong>
        <hr />
        <p>@Localizer["WorkflowsListPageWorkflowDeleteMessage"].</p>
        <button type="button" class="close" onclick="hideToast('task-deleted-toast');" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="alert alert-danger alert-dismissible fade show d-none" id="error-toast" role="alert">
        <strong class="mr-auto">@Localizer["Error"]</strong>
        <hr />
        <p class="errorMessage">@errorMessage</p>
        <button type="button" class="close" onclick="hideToast('error-toast');" aria-label="Close" title="@Localizer["Close"]">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

@code
{
    private List<Workflow> workflows;

    private string errorMessage;

    private void Navigate(string uri)
    {
        NavigationManager.NavigateTo(uri);
    }

    private async Task SortList(string attribute)
    {
        if (workflows != null)
        {
            if (workflows.Count > 0)
            {
                if (attribute.Equals("name"))
                {
                    workflows = workflows.OrderBy(i => i.Name).ToList();
                }
                else if (attribute.Equals("added"))
                {
                    workflows = workflows.OrderBy(i => i.Added).ToList();
                }
                else if (attribute.Equals("updated"))
                {
                    workflows = workflows.OrderBy(i => i.Updated).ToList();
                }
            }
            else
            {
                errorMessage = $"{Localizer["TemplatesListPageSortEmptyTemplatesError"]}.";
                await AlertService.DisplayToast("error-toast");
            }
        }
        else
        {
            errorMessage = $"{Localizer["TemplatesListPageSortNullTemplatesError"]}.";
            await AlertService.DisplayToast("error-toast");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        workflows = await DataAccess.GetItemsAsList<Workflow>(ObjectStores.Workflows.ToString());
        if (workflows != null)
        {
            workflows = workflows.Where(i => i.UserID.Equals(UserHelper.UserID)).OrderBy(i => i.Added).ToList();
        }
    }
}